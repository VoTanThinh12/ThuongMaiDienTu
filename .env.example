# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT
JWT_SECRET="your_jwt_secret_key"
JWT_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV=development
VERBOSE=true
ENABLE_PAYMENT_DETECTION=true

# VietQR Configuration - Updated for MB Bank
VIETQR_BANK_CODE=MB
VIETQR_ACCOUNT_NUMBER=0346176591
VIETQR_ACCOUNT_NAME=VO TAN THINH

# Payment Gateway Webhook (Chọn một trong các gateway sau)
# Sepay.vn - Popular Vietnamese payment gateway
SEPAY_API_URL=https://my.sepay.vn/userapi
SEPAY_TOKEN=your_sepay_token
SEPAY_WEBHOOK_SECRET=your_sepay_webhook_secret

# Casso.vn - Bank statement sync service
